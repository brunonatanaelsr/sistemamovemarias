# =============================================================================
# CONFIGURAÇÕES GERAIS DO SISTEMA
# =============================================================================

# Ambiente da aplicação (development, staging, production)
FLASK_ENV=development
NODE_ENV=development

# Secret key para Flask (gerar uma chave segura para produção)
SECRET_KEY=dev-secret-key-change-in-production

# =============================================================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# =============================================================================

# PostgreSQL Database Configuration
DATABASE_URL=postgresql://movemarias_user:movemarias_password@db:5432/movemarias_db

# Configurações específicas do PostgreSQL
DB_HOST=db
DB_PORT=5432
DB_NAME=movemarias_db
DB_USER=movemarias_user
DB_PASSWORD=movemarias_password

# =============================================================================
# CONFIGURAÇÕES DE AUTENTICAÇÃO JWT
# =============================================================================

# JWT Secret Key (deve ser diferente da SECRET_KEY)
JWT_SECRET_KEY=jwt-secret-key-change-in-production

# Tempo de expiração do token em minutos
JWT_ACCESS_TOKEN_EXPIRES=1440  # 24 horas

# Tempo de expiração do refresh token em dias
JWT_REFRESH_TOKEN_EXPIRES=30   # 30 dias

# =============================================================================
# CONFIGURAÇÕES DO FLASK
# =============================================================================

# Host e porta do Flask
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Debug mode (False em produção)
FLASK_DEBUG=True

# =============================================================================
# CONFIGURAÇÕES DO FRONTEND REACT
# =============================================================================

# URL da API do backend
REACT_APP_API_URL=http://localhost:5000/api

# Porta do React
REACT_APP_PORT=3000

# =============================================================================
# CONFIGURAÇÕES DE CORS
# =============================================================================

# Origens permitidas (separadas por vírgula)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# CONFIGURAÇÕES DE EMAIL (para futuras implementações)
# =============================================================================

# SMTP Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=seu-email@gmail.com
MAIL_PASSWORD=sua-senha-de-app

# Email do administrador
ADMIN_EMAIL=admin@movemarias.org

# =============================================================================
# CONFIGURAÇÕES DE UPLOAD DE ARQUIVOS
# =============================================================================

# Diretório para uploads
UPLOAD_FOLDER=uploads/

# Tamanho máximo de arquivo em MB
MAX_CONTENT_LENGTH=16

# Tipos de arquivo permitidos
ALLOWED_EXTENSIONS=pdf,doc,docx,jpg,jpeg,png

# =============================================================================
# CONFIGURAÇÕES DE LOGS
# =============================================================================

# Nível de log (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=DEBUG

# Arquivo de log
LOG_FILE=logs/app.log

# =============================================================================
# CONFIGURAÇÕES DE REDIS (para cache futuro)
# =============================================================================

# Redis URL
REDIS_URL=redis://redis:6379/0

# =============================================================================
# CONFIGURAÇÕES DE SEGURANÇA
# =============================================================================

# Rate Limiting (requisições por minuto)
RATE_LIMIT=100

# Tempo de bloqueio após tentativas de login falhadas (em minutos)
LOGIN_ATTEMPT_TIMEOUT=15

# Máximo de tentativas de login
MAX_LOGIN_ATTEMPTS=5

# =============================================================================
# CONFIGURAÇÕES DE BACKUP
# =============================================================================

# Diretório de backup
BACKUP_DIR=backups/

# Retenção de backup em dias
BACKUP_RETENTION_DAYS=30

# =============================================================================
# CONFIGURAÇÕES LGPD
# =============================================================================

# Tempo de retenção de dados em anos
DATA_RETENTION_YEARS=5

# Email do DPO (Data Protection Officer)
DPO_EMAIL=dpo@movemarias.org

# =============================================================================
# CONFIGURAÇÕES DE MONITORAMENTO
# =============================================================================

# Sentry DSN (para monitoramento de erros)
SENTRY_DSN=

# =============================================================================
# CONFIGURAÇÕES DE PRODUÇÃO
# =============================================================================

# SSL Configuration (para produção)
SSL_CERTIFICATE_PATH=/etc/ssl/certs/movemarias.crt
SSL_PRIVATE_KEY_PATH=/etc/ssl/private/movemarias.key

# Domain name
DOMAIN_NAME=movemarias.org

# =============================================================================
# CONFIGURAÇÕES DO DOCKER
# =============================================================================

# Versões das imagens Docker
PYTHON_VERSION=3.11
NODE_VERSION=18
POSTGRES_VERSION=15

# =============================================================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# =============================================================================

# Seed data para desenvolvimento
SEED_DATABASE=True

# Admin user padrão para desenvolvimento
DEFAULT_ADMIN_EMAIL=admin@movemarias.dev
DEFAULT_ADMIN_PASSWORD=admin123

# Profissional user padrão para desenvolvimento
DEFAULT_PROF_EMAIL=profissional@movemarias.dev
DEFAULT_PROF_PASSWORD=prof123
