{
  "name": "movemarias-frontend",
  "version": "1.0.0",
  "description": "Frontend React para o Sistema Move Marias",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4",
    "react-router-dom": "^6.15.0",
    "axios": "^1.5.0",
    "@mui/material": "^5.14.10",
    "@mui/icons-material": "^5.14.9",
    "@mui/x-data-grid": "^6.12.0",
    "@mui/x-date-pickers": "^6.12.0",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "date-fns": "^2.30.0",
    "formik": "^2.4.5",
    "yup": "^1.3.2",
    "recharts": "^2.8.0",
    "react-toastify": "^9.1.3",
    "react-pdf": "^7.3.3",
    "jspdf": "^2.5.1",
    "html2canvas": "^1.4.1",
    "react-input-mask": "^2.0.4",
    "lodash": "^4.17.21",
    "dayjs": "^1.11.9"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write src/**/*.{js,jsx,ts,tsx,css,scss,json}",
    "analyze": "npm run build && npx bundle-analyzer build/static/js/*.js",
    "docker:dev": "docker build -t movemarias-frontend:dev --target development .",
    "docker:prod": "docker build -t movemarias-frontend:prod --target production ."
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "warn",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/lodash": "^4.14.198",
    "@types/react-input-mask": "^3.0.2",
    "eslint": "^8.49.0",
    "prettier": "^3.0.3",
    "bundle-analyzer": "^0.2.0"
  },
  "proxy": "http://localhost:5000",
  "homepage": "/",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
