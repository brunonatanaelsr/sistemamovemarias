# ============================================================================
# Configurações do Frontend React - Move Marias
# ============================================================================

# URL da API do backend
REACT_APP_API_URL=http://localhost:5000/api

# Configurações de desenvolvimento
REACT_APP_ENV=development

# Configurações de debug
REACT_APP_DEBUG=true

# Timeout para requisições HTTP (em milissegundos)
REACT_APP_REQUEST_TIMEOUT=30000

# Configurações de upload
REACT_APP_MAX_FILE_SIZE=16777216  # 16MB em bytes
REACT_APP_ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png

# Configurações de paginação
REACT_APP_DEFAULT_PAGE_SIZE=20
REACT_APP_MAX_PAGE_SIZE=100

# Configurações de autenticação
REACT_APP_TOKEN_STORAGE_KEY=movemarias_token
REACT_APP_REFRESH_TOKEN_STORAGE_KEY=movemarias_refresh_token

# Configurações de tema
REACT_APP_PRIMARY_COLOR=#1976d2
REACT_APP_SECONDARY_COLOR=#dc004e

# Nome da aplicação
REACT_APP_NAME=Move Marias
REACT_APP_VERSION=1.0.0

# Configurações de monitoramento (Sentry, etc.)
# REACT_APP_SENTRY_DSN=

# Configurações de analytics
# REACT_APP_GOOGLE_ANALYTICS_ID=

# Configurações de mapa (se necessário no futuro)
# REACT_APP_GOOGLE_MAPS_API_KEY=

# Feature flags
REACT_APP_ENABLE_DEBUG_PANEL=true
REACT_APP_ENABLE_PERFORMANCE_MONITORING=false

# Configurações de cache
REACT_APP_CACHE_DURATION=300000  # 5 minutos em milissegundos

# Configurações de toast/notificações
REACT_APP_TOAST_DURATION=5000  # 5 segundos

# Configurações de formulários
REACT_APP_AUTO_SAVE_INTERVAL=30000  # 30 segundos
REACT_APP_ENABLE_AUTO_SAVE=true
